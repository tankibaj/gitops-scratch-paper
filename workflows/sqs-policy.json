{
  "Version": "2012-10-17",
  "Id": "SQS-Policy",
  "Statement": [
    {
      "Sid": "EventWriter",
      "Effect": "Allow",
      "Principal": {
        "Service": "s3.amazonaws.com"
      },
      "Action": "sqs:SendMessage",
      "Resource": "arn:aws:sqs:eu-central-1:XXXXX:catalog-service",
      "Condition": {
        "StringEquals": {
          "aws:SourceAccount": "117930661147"
        },
        "ArnLike": {
          "aws:SourceArn": "arn:aws:s3:::catalog-service"
        }
      }
    }
  ]
}